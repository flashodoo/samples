<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record model="ir.ui.view" id="flash_ventas_productos_tree_view">
        <field name="name">flash.productos.tree</field>
        <field name="model">flash.productos</field>
        <field name="arch" type="xml">
            <tree string="Productos" editable="bottom">
                <field name="name" />
				<field name="precio" />
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_flash_ventas_productos">
        <field name="name">productos</field>
        <field name="res_model">flash.productos</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Productos"
              parent="flash_menu_ficheros"
              id="flash_ventas_productos_menu"
              action="action_flash_ventas_productos"
              sequence="20" />

</odoo>
